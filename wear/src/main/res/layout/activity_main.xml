<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="sketchagram.chalmers.com.sketchagram.MessageFragment">

    <!-- TODO: Update blank fragment layout -->

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Conversations"
        android:background="@null"
        android:id="@+id/conversationButton"
        android:layout_gravity="center_horizontal|bottom"
        android:onClick="showConversations"
        android:src="@drawable/ic_message" />

    <ImageButton
        android:scaleType="fitCenter"
        android:background="@null"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="New Drawing"
        android:id="@+id/drawingButton"
        android:layout_gravity="center_horizontal|top"
        android:onClick="sendDrawing"
        android:singleLine="false"
        android:src="@drawable/ic_draw" />

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="fitCenter"
        android:id="@+id/messageButton"
        android:layout_gravity="center"
        android:onClick="sendMessage"
        android:background="@null"
        android:src="@drawable/ic_emoji" />

</FrameLayout>
