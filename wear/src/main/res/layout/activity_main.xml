<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="sketchagram.chalmers.com.sketchagram.MessageFragment"
    android:paddingLeft="40dp"
    android:background="@color/white"
    android:baselineAligned="false">

    <!-- TODO: Update blank fragment layout -->

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="4dp"
        android:clickable="false"
        android:onClick="sendDrawing">

        <ImageButton
            android:scaleType="fitCenter"
            android:background="@null"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:id="@+id/drawingButton"
            android:singleLine="false"
            android:src="@drawable/ic_draw" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Draw"
            android:textColor="@color/sg_dark"
            android:clickable="true"
            android:onClick="sendDrawing"
            android:id="@+id/textDraw"
            android:singleLine="false"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="5dp" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="4dp"
        android:onClick="sendEmoji">

        <ImageButton
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:scaleType="fitCenter"
            android:id="@+id/messageButton"
            android:background="@null"
            android:src="@drawable/ic_emoji" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Emoji"
            android:textColor="@color/sg_dark"
            android:id="@+id/textEmoji"
            android:clickable="true"
            android:onClick="sendMessage"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="5dp" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="4dp"
        android:onClick="showConversations">

        <ImageButton
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:scaleType="fitCenter"
            android:background="@null"
            android:id="@+id/conversationButton"
            android:src="@drawable/ic_message" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Convo"
            android:clickable="true"
            android:onClick="showConversations"
            android:id="@+id/textConvo"
            android:textColor="@color/sg_dark"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="5dp" />
    </TableRow>


</TableLayout>
