<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawingLinearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey"
    android:orientation="vertical"
    tools:context=".MainActivity" >

    <sketchagram.chalmers.com.sketchagram.DrawingView
        android:id="@+id/createDrawingView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="3dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="3dp"
        android:layout_weight="2"
        android:background="#FFFFFFFF" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_weight="1"
        android:background="@color/white">

        <ImageButton
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:background="#00000000"
            android:text="@string/send_emoticon"
            android:id="@+id/sendEmoticonButton"
            android:layout_gravity="center_horizontal|center_vertical|right"
            android:src="@drawable/happyface"
            android:scaleType="fitXY"
            android:layout_marginRight="8dp"
            android:cropToPadding="false"
            android:onClick="sendEmoticon" />
    </FrameLayout>

</LinearLayout>
