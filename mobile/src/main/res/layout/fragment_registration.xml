<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:background="@drawable/login_background">

    <LinearLayout android:layout_height="wrap_content" android:layout_width="wrap_content" tools:context="sketchagram.chalmers.com.sketchagram.RegistrationFragment"
        android:orientation="vertical" android:layout_centerInParent="true">

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/user_name"
            android:ems="10"
            android:enabled="true"
            android:editable="true"
            android:layout_gravity="center"
            android:layout_margin="12dp"
            android:hint="@string/choose_username" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/choose_password"
            android:enabled="true"
            android:editable="true"
            android:layout_gravity="center"
            android:layout_margin="12dp"
            android:hint="@string/choose_password" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/re_enter_password"
            android:enabled="true"
            android:editable="true"
            android:layout_gravity="center"
            android:layout_margin="12dp"
            android:hint="@string/reenter_password" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/email"
            android:enabled="true"
            android:editable="true"
            android:layout_gravity="center"
            android:layout_margin="12dp"
            android:hint="@string/enter_email" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/create_account"
            android:id="@+id/button"
            android:layout_gravity="center"
            android:layout_margin="12dp"
            android:onClick="createAccount" />
    </LinearLayout>
</RelativeLayout>
