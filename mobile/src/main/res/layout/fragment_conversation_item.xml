<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="3dp">

    <sketchagram.chalmers.com.sketchagram.SquareImageView
        android:id="@+id/picture"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:background="@drawable/conversation_item_layout"
        />
    <TextView
        android:id="@+id/senderText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="15dp"
        android:text="test"
        android:paddingBottom="15dp"
        android:layout_gravity="top|left"
        android:textColor="@android:color/white"
        android:background="@color/blackTransparent"
        />
    <TextView
        android:id="@+id/senderDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="test2"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:layout_gravity="right|top"
        android:textColor="@android:color/white" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/unreadMessage"
        android:background="@color/sketchagramPrimary"
        android:visibility="invisible"
        android:src="@drawable/ic_action_unread"
        android:layout_gravity="left|bottom" />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fast_reply"
        android:background="@color/sketchagramSecondary"
        android:src="@drawable/ic_action_reply"
        android:clickable="true"
        android:layout_gravity="right|bottom" />

</FrameLayout>