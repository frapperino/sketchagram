<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="3dp">

    <sketchagram.chalmers.com.sketchagram.SquareImageView
        android:id="@+id/picture"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:background="@drawable/conversation_item_layout"
        />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/blackTransparent">

        <TextView
            android:id="@+id/senderText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingTop="15dp"
            android:text="test"
            android:paddingBottom="15dp"
            android:layout_gravity="top|left"
            android:textColor="@android:color/white"
            />

        <ImageView
            android:id="@+id/status_image_grid"
            android:layout_height="10dp"
            android:layout_width="10dp"
            android:layout_gravity="center|end"
            android:layout_margin="10dp"/>

        <TextView
            android:id="@+id/senderDate"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="test2"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:layout_gravity="right|top"
            android:textColor="@android:color/white"
            android:gravity="right" />
    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/unreadMessage"
        android:background="@color/sketchagramPrimary"
        android:visibility="invisible"
        android:src="@drawable/ic_email_white_24dp"
        android:layout_gravity="left|bottom"
        android:padding="5dp" />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fast_reply"
        android:background="@drawable/gradient"
        android:src="@drawable/ic_reply_white_24dp"
        android:clickable="true"
        android:layout_gravity="right|bottom"
        android:padding="5dp" />

</FrameLayout>

