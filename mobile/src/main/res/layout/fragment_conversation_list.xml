<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_floating_material_light"
    tools:context="sketchagram.chalmers.com.sketchagram.ConversationFragment">

    //these are to be replaced by the grid in the ScrollView below
    <ListView android:id="@+id/conversation_list" android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <TextView android:id="@android:id/empty" android:layout_width="match_parent"
        android:layout_height="match_parent" android:gravity="center" />


    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/conversation_scrollView" >

        //the grid should be empty and a linearlayout added (with the children below) for each new message. Added via custom adapter?
        <GridLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:columnCount="2"
            android:columnOrderPreserved="false"
            android:rowOrderPreserved="false">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:background="@drawable/autumn" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Danny"
                    android:id="@+id/textView11"
                    android:layout_weight="1"
                    android:background="#000000"
                    android:alpha="0.7"
                    android:textColor="#ffffff"
                    android:paddingStart="5dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2 feb, 2015"
                    android:id="@+id/textView12"
                    android:layout_gravity="right"
                    android:background="#000000"
                    android:alpha="0.7"
                    android:textColor="#ffffff"
                    android:paddingEnd="5dp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:background="@drawable/autumn" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Danny"
                    android:id="@+id/textView7"
                    android:layout_weight="1"
                    android:background="#000000"
                    android:alpha="0.7"
                    android:textColor="#ffffff"
                    android:paddingStart="5dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2 feb, 2015"
                    android:id="@+id/textView9"
                    android:layout_gravity="right"
                    android:background="#000000"
                    android:alpha="0.7"
                    android:textColor="#ffffff"
                    android:paddingEnd="5dp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:background="@drawable/autumn">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Danny"
                    android:id="@+id/textView10"
                    android:layout_weight="1"
                    android:background="#000000"
                    android:alpha="0.7"
                    android:textColor="#ffffff"
                    android:paddingStart="5dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2 feb, 2015"
                    android:id="@+id/textView8"
                    android:layout_gravity="right"
                    android:background="#000000"
                    android:alpha="0.7"
                    android:textColor="#ffffff"
                    android:paddingEnd="5dp" />

            </LinearLayout>

        </GridLayout>
    </ScrollView>

</FrameLayout>
